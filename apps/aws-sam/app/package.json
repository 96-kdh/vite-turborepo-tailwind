{
   "name": "aws-sam",
   "version": "1.0.0",
   "license": "MIT",
   "scripts": {
      "dev": "nodemon ./graphql/local-server.js",
      "install:vendor": "mkdir -p ./vendor/@workspace/hardhat/script && cp -R ../../../packages/hardhat/script/* ./vendor/@workspace/hardhat/script",
      "run:lambda": "cd .. && sam local start-lambda --env-vars env.local.json && cd app",
      "build": "tsc && esbuild app.ts --bundle --platform=node --target=es2020 --outfile=dist/app.js && cd dist && zip eventProducer.zip app.js node_modules -r && zip eventConsumer.zip app.js node_modules -r",
      "test": "npm run compile && npm run unit",
      "test:resolvers": "./graphql/resolvers/test-resolvers.sh"
   },
   "dependencies": {
      "@aws-appsync/utils": "^1.12.0",
      "@aws-sdk/client-dynamodb": "^3.767.0",
      "@aws-sdk/client-sqs": "^3.758.0",
      "@aws-sdk/lib-dynamodb": "^3.767.0",
      "@workspace/eslint-config": "file:../../../packages/eslint-config",
      "@workspace/hardhat": "file:../../../packages/hardhat",
      "@workspace/typescript-config": "file:../../../packages/typescript-config",
      "alchemy-sdk": "^3.5.6",
      "esbuild": "^0.14.54",
      "ethers": "^6.13.5",
      "moment-timezone": "^0.5.48"
   },
   "devDependencies": {
      "@aws-sdk/client-lambda": "^3.774.0",
      "@jest/globals": "^29.2.0",
      "@types/aws-lambda": "^8.10.92",
      "@types/jest": "^29.2.0",
      "@types/node": "^20.5.7",
      "apollo-server": "^3.13.0",
      "jest": "^29.2.1",
      "nodemon": "^3.1.9",
      "ts-jest": "^29.0.5",
      "ts-node": "^10.9.1"
   }
}
